{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Spell Parser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/crawler/spell_parser.py",
            "console": "integratedTerminal",
            "args": ["--input", "crawler/spell_pages"]
        },
        {
            "name": "Python Debugger: Spell Crawler (PHB only)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/crawler/spell_crawler.py",
            "console": "integratedTerminal",
            "args": ["--source", "phb"]
        },
        {
            "name": "Python Debugger: Current File with Arguments and selected spells",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["-n", "Guidance", "-n", "Elementalism", "-n", "Absorb Elements"]
        }
    ]
}